        <div class="carousel-inner">

            <div id="home-page" class="item active">
                <div class="container">
                    <div class="vertical-middle">
                        <div class="vertical-middle-inner">
                            <div class="row">
                                <div class="col-sm-6 col-md-push-6">
                                    <div class="embed-responsive embed-responsive-16by9">
